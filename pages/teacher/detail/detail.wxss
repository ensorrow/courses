/* pages/teacher/detail/detail.wxss */
.detail{
  padding: 20rpx;
}
.title{
  font-size: 64rpx;
  margin: 60rpx 0 0rpx;
}
.other{
  font-size: 32rpx;
  margin-top: 8rpx;
}
.score{
  margin-bottom: 20rpx;
}
.block{
  margin: 20rpx 0;
}
.subHeader{
  font-size: 48rpx;
  margin-bottom: 16rpx;
}
.summary{
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 150%;
}
.course_item{
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #f7f7f7;
}
.course_title{
  color: #000;
  font-size: 36rpx;
  font-weight: 400;
  margin-bottom: 16rpx;
}
.course_summary{
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 150%;
  font-weight: 400;
}
.more{
  font-size: 24rpx;
  padding-top: 20rpx;
  color: #008aff;
}
.comment{
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.comment::after{
  content: '';
  display: block;
  clear: both;
}
.msg{
  float: left;
  width: 600rpx;
}
.liked{
  color: rgb(0,138,255);
}
.like{
  text-align: right;
  float: right;
}
.iconfont{
  display: inline;
  font-size: 28rpx;
}
.icon-like{
  font-size: 48rpx;
}
.comment:last-child{
  border-bottom: none;
}
.edit{
  font-size: 28rpx;
  margin-top: .3rem;
  float: right;
  color: rgb(0,138,255);
}
.modal{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.inputWra{
  position: absolute;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background-color: #f2f2f2;
}
input{
  font-size: 28rpx;
  background-color: #fff;
  padding-left: 10rpx;
  padding-right: 10rpx;
}