/* pages/teacher/detail/detail.wxss */
.detail{
  padding: 48rpx;
}
.container{
  background-color: #fff;
}
.title{
  font-weight: bold;
  font-size: 62rpx;
  margin: 60rpx 0 0rpx;
}
.other{
  font-size: 36rpx;
  line-height: 130%;
  margin-top: 32rpx;
}
.score{
  margin-top:0;
  font-size: 36rpx;
  line-height: 130%;
  padding-bottom: 36rpx;
  border-bottom: 1px solid #f7f7f7;
}
.block{
  padding: 36rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.block:last-child{
  border-bottom: none;
}
.subHeader{
  font-weight: bold;
  font-size: 36rpx;
  line-height: 130%;
  margin-bottom: 32rpx;
}
.summary{
  font-size: 36rpx;
  line-height: 140%;
}
.course_item{
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #f7f7f7;
}
.course_item:last-child{
  border-bottom: none;
}
.course_title{
  color: #000;
  font-size: 36rpx;
  font-weight: 400;
  margin-bottom: 16rpx;
}
.course_summary{
  color: #a9a9a9;
  font-size: 28rpx;
  line-height: 150%;
  font-weight: 400;
}
.more{
  font-size: 24rpx;
  padding-top: 20rpx;
  color: #008aff;
}
.comment{
  font-size: 36rpx;
  line-height: 140%;
  padding: 20rpx 0;
  border-bottom: 1px solid #f7f7f7;
}
.comment::after{
  content: '';
  display: block;
  clear: both;
}
.msg{
  float: left;
  max-width: 100%;
  word-wrap:break-word;
}
.liked{
  color: rgb(0,138,255);
}
.like{
  text-align: right;
  float: right;
}
.iconfont{
  display: inline;
  font-size: 28rpx;
}
.icon-like{
  font-size: 48rpx;
}
.edit{
  font-size: 36rpx;
  margin-top: .3rem;
  float: right;
  color: rgb(0,138,255);
}
.botton{
  margin-top: 32rpx;
  width:100%;
  height: 91rpx;
  color: rgb(0,138,255);
  text-align: center;
  border: 2rpx solid rgb(0,138,255);
  border-radius: 9rpx;
  font-size: 38rpx;
  line-height: 91rpx;
}
.modal{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.inputWra{
  position: absolute;
  bottom: 0;
  font-size: 36rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 8px 20rpx;
  background-color: #efeff4;
}
input{
  font-family: "PingFang SC","Microsoft YaHei","Helvetica Neue", Helvetica,  "Hiragino Sans GB",  "微软雅黑", Arial, sans-serif;
  font-size: 36rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  padding-left: 20rpx;
  padding-right: 10rpx;
  border-radius: 9rpx;
}